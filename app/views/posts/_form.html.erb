<%= simple_form_for(@post) do |f| %>
<div class="panel panel-info">
	<div class="panel-heading">
		Post
	</div>
	<div class="panel-body">
		<%= f.error_notification %>
		<%= f.input :content , required: true , label: false , placeholder: 'enter the label content' , input_html: {class: 'form-control'} %>
	</div>
	<div class="panel-footer">
		<%= f.button :submit , class: 'btn btn-block btn-warning' %>
	</div>
</div>
<% end %>